<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- base  application theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- LOCK BUTTON -->
    <style name="lock_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lock_button.unlock" parent="lock_button">
        <item name="android:textColor">@color/app_red</item>
        <item name="android:background">@drawable/lock_button_unlock</item>
    </style>

    <style name="lock_button.lock">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/lock_button_lock</item>
    </style>

</resources>